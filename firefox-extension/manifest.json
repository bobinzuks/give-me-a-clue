{
  "manifest_version": 2,
  "name": "Claude Code Navigator",
  "version": "1.0.0",
  "description": "Connect Firefox to Claude Code for AI-assisted web navigation",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>",
    "webNavigation",
    "nativeMessaging"
  ],
  
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  
  "browser_action": {
    "default_title": "Claude Code Navigator",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    "content/overlay.css"
  ]
}